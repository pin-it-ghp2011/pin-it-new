{
  "manifest_version": 2,
  "name": "Pin It",
  "version": "1",
  "description": "read stuff offline!",
  "permissions": [
    "storage",
    "notifications",
    "identity",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Pin It Extension",
    "default_popup": "background.html"
  }
}
